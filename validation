$.validator.addMethod("checkPlantCity",
        function(value, element) {
           var result = false;
		   var plant_name = $("#plant_name").val();
            $.ajax({
                type:"POST",
                async:false,
				url:"<?php echo base_url(); ?>part/checkPlantCity", // script to validate in server side
                data: {city: value,plant_name:plant_name},
                dataType:"json",
                success: function(data)
                {
                    if(data=="true")
                    {
                    	result = false;
                    }
                    else if(data=="false")
                    {
                    	result = true;
                    }
                    else
                    {

                    }

                },
                error:function(err)
                {
                	console.log(err);
                }

            });
            return result;
        },
        "Plant Name with same City Already Exists!!"
    );
    
    
    var v = jQuery("#company_plant_location_form").validate({
      rules: {
      	city: {
          required: true,
          checkPlantCity: true
        },
		plant_name:{
			required: true,
			checkPlantCity: true
		}
      },
      errorPlacement: function(error, element) {
       var elem = $(element);
       if (elem.hasClass("select2-hidden-accessible"))
       {
           element = $("#select2-" + elem.attr("id") + "-container").parent();
           error.insertAfter(element);
       }
       else if(element.prop('type') === 'checkbox' || element.prop('type') === 'radio')
       {
       	error.insertAfter(element.parent().parent());
       }
       else if(element.parent('.input-group').length)
       {
       	error.insertAfter(element.parent());
       }
       else
       {
           error.insertAfter(element);
       }
     },
      errorElement: "span",
      errorClass: "help-inline-error",
    });
